{% extends 'base.html.twig' %}

{% block title %}
    Contact
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Code Test - Contact Page
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Enquiry{% if success %} submitted successfully!{% else %} failed to submit...{% endif %}</div>
                <div class="panel-body">
                    {% if success %}
                        <p>Your enquiry was submitted successfully. The details of your submitted enquiry are below.</p>
                        <div class="row">
                            <div class="col-lg-2">Your name:</div>
                            <div class="col-lg-10">{{ enquiry.name }}</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2">Your email:</div>
                            <div class="col-lg-10">{{ enquiry.email }}</div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2">Your enquiry:</div>
                            <div class="col-lg-10">{{ enquiry.content }}</div>
                        </div>
                    {% else %}
                        <p>Unfortunately your enquiry failed to submit. Please try again later.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}