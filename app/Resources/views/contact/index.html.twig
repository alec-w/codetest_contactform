{% extends 'base.html.twig' %}

{% block title %}
    Contact
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Code Test - Contact Page
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Contact</div>
                <div class="panel-body">
                    {% form_theme form 'bootstrap_3_layout.html.twig' %}
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-lg-12">
                                {{ form_row(form.name) }}
                                {{ form_row(form.email) }}
                                {{ form_row(form.content) }}
                                {{ form_row(form.recaptcha) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2">
                                {{ form_row(form.save) }}
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}